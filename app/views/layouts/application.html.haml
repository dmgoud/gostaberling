!!! 5
%html{'xml:lang' => 'en-us', :lang => 'en-us', :xmlns => 'http://www.w3.org/1999/xhtml'}
  %head
    %title Gosta Berling
    %meta{ :content => 'text/html; charset=utf-8', 'http-equiv' => "content-type" }

    = csrf_meta_tag

    = stylesheet_link_tag 'reset', 'application', 'menu', 'popup', controller_name, :media => "all"
    <link type="text/css" rel="stylesheet" media="all" href="javascripts/fancybox/jquery.fancybox-1.3.1.css" />
    <link type="text/css" rel="stylesheet" media="all" href="javascripts/galleryview-2.1.1/galleryview.css" />

    <script src="http://www.google.com/jsapi" type="text/javascript"></script>
    <script type="text/javascript">
    - extras = Rails.env.development? ? "{ uncompressed: true }": "{}"
    = "google.load(\"jquery\", \"1.4.3\", #{extras});".html_safe
    </script>

    = javascript_include_tag 'swfobject'
    = javascript_include_tag '1bit'
    = javascript_include_tag 'fancybox/jquery.fancybox-1.3.1.pack'
    = javascript_include_tag 'galleryview-2.1.1/jquery.timers-1.2'
    = javascript_include_tag 'galleryview-2.1.1/jquery.easing.1.3'
    = javascript_include_tag 'galleryview-2.1.1/jquery.galleryview-2.1.1-pack'
    = javascript_include_tag 'jquery.bubbleup'
    = javascript_include_tag 'application'

    %link{:rel => 'shortcut icon', :href => '/images/common/favicon.ico'}
  %body
    #page
      #header
        = render :partial => 'common/menu'
      #container
        .sidebar
          %a.mascot{:href => root_path}
            %img{:src => '/images/common/bed.png'}
        .article
          = yield
      #footer
        = yield :footer
      #popup
    = render :partial => 'common/urchin'
