!!! Strict
%html{'xml:lang' => 'en-us', :lang => 'en-us', :xmlns => 'http://www.w3.org/1999/xhtml'}
  %head
    %title Gosta Berling
    %meta{ :content => 'text/html; charset=utf-8', 'http-equiv' => "content-type" }
    = stylesheet_link_tag 'reset', 'application', 'menu', 'popup', controller_name, :media => "all"
    <link type="text/css" rel="stylesheet" media="all" href="javascripts/fancybox/jquery.fancybox-1.3.1.css"></link>
    <link type="text/css" rel="stylesheet" media="all" href="javascripts/galleryview-2.1.1/galleryview.css"></link>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>
    = javascript_include_tag 'jrails'
    = javascript_include_tag 'swfobject'
    = javascript_include_tag '1bit'
    = javascript_include_tag 'fancybox/jquery.fancybox-1.3.1.pack'
    = javascript_include_tag 'galleryview-2.1.1/jquery.timers-1.2'
    = javascript_include_tag 'galleryview-2.1.1/jquery.easing.1.3'
    = javascript_include_tag 'galleryview-2.1.1/jquery.galleryview-2.1.1-pack'
    = javascript_include_tag 'jquery.bubbleup'
    
    %link{:rel => 'shortcut icon', :href => '/images/favicon.ico'}
  %body
    #page
      = yield
      #popup
    = render :partial => 'common/urchin'
