!!! Strict
%html{'xml:lang' => 'en-us', :lang => 'en-us', :xmlns => 'http://www.w3.org/1999/xhtml'}
  %head
    %title Gosta Berling
    %meta{ :content => 'text/html; charset=utf-8', 'http-equiv' => "content-type" }
    = stylesheet_link_tag 'reset', 'thickbox', 'application', 'menu', 'popup', controller_name, :media => "all"

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.1/jquery-ui.min.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/swfobject/2.1/swfobject.js"></script>
    = javascript_include_tag 'jrails'
    = javascript_include_tag 'jquery.livequery'
    = javascript_include_tag 'thickbox'
    = javascript_include_tag 'swfobject'
    = javascript_include_tag '1bit'
    = javascript_include_tag 'common'
    = javascript_include_tag controller_name
    = javascript_include_tag 'jquery-galleryview-1.1/jquery.timers-1.1.2'
    = javascript_include_tag 'jquery-galleryview-1.1/jquery.easing.1.3'
    = javascript_include_tag 'jquery-galleryview-1.1/jquery.galleryview-1.1'

    %link{:rel => 'shortcut icon', :href => '/images/favicon.ico'}
  %body
    #page
      = yield
      #popup
    = render :partial => 'common/urchin'
